{% extends 'base.html.twig' %}


{% block body %}
    {% block content %}

        <div class="document-title">

            <h1>{{ provider.name }}</h1>
        </div>

        {{ parent() }}

        <h1>Détail du prestataire</h1>
        <hr />
        {# {% if provider.filename %}
            <img src="/images/logos/{{ provider.filename }}" alt="card-img-top">
        {% endif %}
        #}
        <h4>TVA : {{ provider.tva }}</h4>
        <h4>Tel.: {{ provider.phone }}</h4>
        <h4>Email :<a href="mailto:{{ provider.emailContact }}">{{ provider.emailContact }}</a></h4>
        <h4>Web: {{ provider.web }}</h4>

        <hr />

        <h2>Stages Proposés :</h2>
        {% if provider.stages|length > 0 %}

            <hr/>
            {% for stage in provider.stages %}
                <div class="col-md-3">
                    <h2>{{ stage.name }}</h2>
                </div>
            {% endfor %}
        {% endif %}


    {% endblock %}
{% endblock %}